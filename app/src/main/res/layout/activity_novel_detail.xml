<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.xomodo.novellibrary.NovelDetail"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_novel_photo"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="32dp" />

            <TextView
                android:id="@+id/tv_novel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_margin="8dp"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_novel_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_judul_resensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:lineSpacingExtra="2sp"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/resensi_pg_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="15sp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="2sp"/>

            <TextView
                android:id="@+id/resensi_pg_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="15sp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="2sp"/>

            <TextView
                android:id="@+id/resensi_pg_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:lineSpacingExtra="2sp"
                android:justificationMode="inter_word"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>